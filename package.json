{
  "name": "supabase-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:prod": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts --quiet --fix",
    "type-check": "vue-tsc --noEmit",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:unit": "vitest run tests/unit/",
    "test:unit:watch": "vitest tests/unit/",
    "test:unit:ui": "vitest --ui tests/unit/",
    "test:playwright:unit": "npx playwright test tests/unit/",
    "test:components": "npx playwright test tests/components/",
    "test:e2e": "npx playwright test tests/opportunity-management.spec.ts tests/opportunity-integration.spec.ts tests/opportunity-store.spec.ts",
    "test:smoke-production": "npx playwright test tests/integration/basic-integration-validation.spec.ts --project=desktop-chromium",
    "test:interaction-full": "npx playwright test tests/interaction-*.spec.ts",
    "test:accessibility": "npx playwright test tests/accessibility/",
    "test:performance": "npx playwright test tests/performance/",
    "test:performance:api": "npx playwright test tests/performance/api-performance-benchmark.spec.ts",
    "test:performance:security": "npx playwright test tests/performance/security-performance-impact.spec.ts",
    "test:performance:load": "npx playwright test tests/performance/load-testing.spec.ts",
    "test:performance:report": "npx playwright test tests/performance/performance-report-generator.spec.ts",
    "test:performance:full": "npx playwright test tests/performance/performance-test-runner.spec.ts",
    "test:comprehensive": "npx playwright test tests/opportunity-comprehensive-test-suite.ts",
    "test:opportunity": "npx playwright test tests/opportunity-*.spec.ts",
    "test:report": "npx playwright show-report",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:chrome": "npx playwright test --project=desktop-chromium",
    "test:ipad": "npx playwright test --project=tablet",
    "test:mobile": "npx playwright test --project=mobile",
    "start": "npm run dev",
    "prod:build": "NODE_ENV=production npm run build:prod",
    "serve:local": "npm install -g serve && serve -s dist"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@supabase/supabase-js": "^2.52.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^17.2.1",
    "pinia": "^2.1.7",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^1.0.2",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "vue-tsc": "^2.2.12",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "jsdom": "^24.0.0",
    "vite-node": "^3.2.4",
    "vitest": "^1.2.0"
  }
}
